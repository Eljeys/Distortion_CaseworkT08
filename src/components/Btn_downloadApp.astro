---
const {variant,} = Astro.props;
---
<button class={variant}>
   <slot/>
</button>

<style>
    .app_stor{
        font-family: "Montserrat";
        display: flex;
        flex-direction: row-reverse;
        justify-content: center;
        align-items: center;
        border-radius: 20px;
        border: 3px solid var(--default-stroke-clr);
        background-color: var(--default-bg-clr);
        gap:0.5rem;
        padding: 0.5rem 0.8rem;
    }
    .app_stor:hover{
        background-color: var(--hover-bgCrl);
    }
    .app_stor:active{
        border: 4px solid var(--focus-borderCrl)
    }
</style>